NODE_ENV=development

# Postgres
POSTGRES_USER=nexuscore
POSTGRES_PASSWORD=nexuscore
POSTGRES_DB=nexuscore
POSTGRES_PORT=5432
DATABASE_URL=postgres://nexuscore:nexuscore@postgres:5432/nexuscore

# Redis
REDIS_PORT=6379
REDIS_URL=redis://redis:6379

# WhatsApp Gateway (WWeb.js)
WHATSAPP_GATEWAY_PORT=3001
WHATSAPP_GATEWAY_SESSION=default
WHATSAPP_GATEWAY_BASE_URL=http://wweb:3001
WHATSAPP_GATEWAY_HOST_URL=http://localhost:3001
WHATSAPP_GATEWAY_WEBHOOK_URL=http://app:3000/webhook
WHATSAPP_GATEWAY_WEBHOOK_EVENTS=message.any
WHATSAPP_GATEWAY_DATA_DIR=./data/whatsapp-gateway/session
MCP_PORT=3030

# OpenAI & Groq
OPENAI_API_KEY=sk-your-key
OPENAI_MODEL=gpt-4o-mini
OPENAI_VISION_MODEL=gpt-4o
OPENAI_TRANSCRIPTION_MODEL=whisper-1
OPENAI_EMBEDDING_MODEL=text-embedding-3-small
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy
OPENAI_ROUTER_MODEL=gpt-4o-mini
GROQ_API_KEY=gsk-your-key
GROQ_ROUTER_MODEL=llama-3.1-8b-instant
GROQ_COMPLETION_MODEL=llama-3.1-70b-versatile
GROQ_VISION_MODEL=llama-3.2-11b-vision-preview
GROQ_TRANSCRIPTION_MODEL=whisper-large-v3-turbo

# Application
APP_PORT=3000
DASHBOARD_PORT=3002
SESSION_SECRET=change-me

# Agent Config
BUFFER_TIMEOUT_MS=8000
BUSINESS_RULES_PATH=data/biznes.md
TOOL_TAPAZ_BASE_URL=https://tap.az/s
DEFAULT_LOCALE=az-AZ
AGENT_MODEL_GENERAL=gpt-4o-mini
