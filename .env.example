AGENT_MODEL_DIAGNOSTICS=gpt-4o

# Telemetriya
TELEMETRY_ENABLED=true
TELEMETRY_REDIS_STREAM=telemetry:events
TELEMETRY_STREAM_MAX_LENGTH=500
TELEMETRY_HISTORY_LIMIT=200
