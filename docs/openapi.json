{
  "openapi": "3.1.0",
  "info": {
    "title": "NexusCore WhatsApp Gateway API",
    "description": "HTTP interface exposed by the in-repo whatsapp-web.js gateway. All endpoints return JSON and require no authentication on the internal docker network.",
    "version": "2025-12-01"
  },
  "servers": [
    {
      "url": "http://localhost:3001",
      "description": "Local gateway"
    }
  ],
  "components": {
    "schemas": {
      "Status": {
        "type": "object",
        "properties": {
          "status": { "type": "string" }
        },
        "required": ["status"]
      },
      "SessionSummary": {
        "type": "object",
        "properties": {
          "name": { "type": "string" },
          "status": { "type": "string" },
          "me": {
            "type": "object",
            "properties": {
              "id": { "type": "string" },
              "pushName": { "type": "string" }
            }
          }
        },
        "required": ["name", "status"]
      },
      "TextMessageRequest": {
        "type": "object",
        "properties": {
          "session": { "type": "string", "default": "default" },
          "chatId": { "type": "string" },
          "text": { "type": "string" },
          "linkPreview": { "type": "boolean", "default": false }
        },
        "required": ["session", "chatId", "text"]
      },
      "MediaDescriptor": {
        "type": "object",
        "properties": {
          "url": { "type": "string", "format": "uri" },
          "base64": { "type": "string" },
          "mimetype": { "type": "string" },
          "filename": { "type": "string" }
        }
      },
      "MediaMessageRequest": {
        "type": "object",
        "properties": {
          "session": { "type": "string", "default": "default" },
          "chatId": { "type": "string" },
          "caption": { "type": "string" },
          "convert": { "type": "boolean" },
          "file": { "$ref": "#/components/schemas/MediaDescriptor" }
        },
        "required": ["session", "chatId", "file"]
      },
      "LocationMessageRequest": {
        "type": "object",
        "properties": {
          "session": { "type": "string", "default": "default" },
          "chatId": { "type": "string" },
          "latitude": { "type": "number" },
          "longitude": { "type": "number" },
          "title": { "type": "string" }
        },
        "required": ["session", "chatId", "latitude", "longitude"]
      },
      "VcardMessageRequest": {
        "type": "object",
        "properties": {
          "session": { "type": "string", "default": "default" },
          "chatId": { "type": "string" },
          "contacts": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "vcard": { "type": "string" }
              },
              "required": ["vcard"]
            }
          }
        },
        "required": ["session", "chatId", "contacts"]
      },
      "ReactionRequest": {
        "type": "object",
        "properties": {
          "session": { "type": "string", "default": "default" },
          "messageId": { "type": "string" },
          "reaction": { "type": "string" }
        },
        "required": ["session", "messageId", "reaction"]
      },
      "MessageResponse": {
        "type": "object",
        "properties": {
          "id": { "type": "string" }
        },
        "required": ["id"]
      }
    }
  },
  "paths": {
    "/health": {
      "get": {
        "summary": "Gateway liveness probe",
        "responses": {
          "200": {
            "description": "Gateway online",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Status" }
              }
            }
          }
        }
      }
    },
    "/ping": {
      "get": {
        "summary": "Simple ping endpoint",
        "responses": {
          "200": {
            "description": "Ping reply",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/Status" }
              }
            }
          }
        }
      }
    },
    "/api/server/status": {
      "get": {
        "summary": "Gateway runtime status",
        "responses": {
          "200": {
            "description": "Status payload",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "engine": { "type": "string" },
                    "session": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/server/version": {
      "get": {
        "summary": "Gateway build identifier",
        "responses": {
          "200": {
            "description": "Version payload",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "version": { "type": "string" }
                  },
                  "required": ["version"]
                }
              }
            }
          }
        }
      }
    },
    "/api/sessions": {
      "get": {
        "summary": "List session metadata",
        "responses": {
          "200": {
            "description": "Array of sessions",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": { "$ref": "#/components/schemas/SessionSummary" }
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Update session configuration (webhooks)",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "id": { "type": "string" },
                  "config": {
                    "type": "object",
                    "properties": {
                      "webhooks": {
                        "type": "array",
                        "items": {
                          "type": "object",
                          "properties": {
                            "url": { "type": "string", "format": "uri" },
                            "events": {
                              "type": "array",
                              "items": { "type": "string" }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Configuration accepted",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "status": { "type": "string" }
                  },
                  "required": ["id", "status"]
                }
              }
            }
          }
        }
      }
    },
    "/api/sessions/{session}": {
      "get": {
        "summary": "Fetch session details",
        "parameters": [
          {
            "name": "session",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Session status",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SessionSummary" }
              }
            }
          }
        }
      }
    },
    "/api/sessions/{session}/me": {
      "get": {
        "summary": "Authenticated WhatsApp identity",
        "parameters": [
          {
            "name": "session",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "Identity payload",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": { "type": "string" },
                    "pushName": { "type": "string" }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/api/sessions/{session}/start": {
      "post": {
        "summary": "Start a session",
        "parameters": [
          {
            "name": "session",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "201": { "description": "Session starting" },
          "409": { "description": "Session already active" }
        }
      }
    },
    "/api/sessions/{session}/stop": {
      "post": {
        "summary": "Stop a session",
        "parameters": [
          {
            "name": "session",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "201": { "description": "Session stopping" },
          "409": { "description": "Session already stopped" }
        }
      }
    },
    "/api/{session}/auth/qr": {
      "get": {
        "summary": "Retrieve pairing QR code",
        "parameters": [
          {
            "name": "session",
            "in": "path",
            "required": true,
            "schema": { "type": "string" }
          }
        ],
        "responses": {
          "200": {
            "description": "QR payload",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": { "type": "string" },
                    "qr": { "type": "string" }
                  },
                  "required": ["status"]
                }
              }
            }
          },
          "202": { "description": "QR pending" }
        }
      }
    },
    "/api/sendText": {
      "post": {
        "summary": "Send text message",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/TextMessageRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Message queued",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MessageResponse" }
              }
            }
          },
          "503": { "description": "Session not ready" }
        }
      }
    },
    "/api/sendLinkPreview": {
      "post": {
        "summary": "Send message with link preview",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/TextMessageRequest" }
            }
          }
        },
        "responses": {
          "201": { "description": "Message queued" },
          "422": { "description": "Preview unsupported" },
          "503": { "description": "Session not ready" }
        }
      }
    },
    "/api/sendImage": {
      "post": {
        "summary": "Send image message",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MediaMessageRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Message queued",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MessageResponse" }
              }
            }
          },
          "422": { "description": "Invalid payload" },
          "503": { "description": "Session not ready" }
        }
      }
    },
    "/api/sendFile": {
      "post": {
        "summary": "Send document message",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MediaMessageRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Message queued",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MessageResponse" }
              }
            }
          }
        }
      }
    },
    "/api/sendVoice": {
      "post": {
        "summary": "Send voice note",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MediaMessageRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Message queued",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MessageResponse" }
              }
            }
          },
          "503": { "description": "Session not ready" }
        }
      }
    },
    "/api/sendVideo": {
      "post": {
        "summary": "Send video message",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/MediaMessageRequest" }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Message queued",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/MessageResponse" }
              }
            }
          }
        }
      }
    },
    "/api/sendLocation": {
      "post": {
        "summary": "Send location message",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/LocationMessageRequest" }
            }
          }
        },
        "responses": {
          "201": { "description": "Location sent" },
          "503": { "description": "Session not ready" }
        }
      }
    },
    "/api/sendContactVcard": {
      "post": {
        "summary": "Send vCard contact",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/VcardMessageRequest" }
            }
          }
        },
        "responses": {
          "201": { "description": "Contact sent" },
          "503": { "description": "Session not ready" }
        }
      }
    },
    "/api/startTyping": {
      "post": {
        "summary": "Start typing indicator",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "session": { "type": "string", "default": "default" },
                  "chatId": { "type": "string" }
                },
                "required": ["session", "chatId"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Typing started" },
          "503": { "description": "Session not ready" }
        }
      }
    },
    "/api/stopTyping": {
      "post": {
        "summary": "Stop typing indicator",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "session": { "type": "string", "default": "default" },
                  "chatId": { "type": "string" }
                },
                "required": ["session", "chatId"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Typing stopped" },
          "503": { "description": "Session not ready" }
        }
      }
    },
    "/api/sendSeen": {
      "post": {
        "summary": "Send seen receipt",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "session": { "type": "string", "default": "default" },
                  "chatId": { "type": "string" }
                },
                "required": ["session", "chatId"]
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Seen receipt sent" }
        }
      }
    },
    "/api/reaction": {
      "put": {
        "summary": "Apply reaction to message",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/ReactionRequest" }
            }
          }
        },
        "responses": {
          "200": { "description": "Reaction applied" },
          "503": { "description": "Session not ready" }
        }
      }
    }
  }
}
